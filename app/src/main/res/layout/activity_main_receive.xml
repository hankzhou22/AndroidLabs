<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false">

    <View
        android:id="@+id/senderAvatar"
        android:layout_alignParentStart="true"
        android:scaleType="centerInside"
        android:background="@drawable/row_send"
        android:layout_width="34sp"
        android:layout_height="34sp" />

    <TextView
        android:id="@+id/senderName"
        android:layout_marginStart="15sp"
        android:layout_toEndOf="@+id/senderAvatar"
        android:layout_alignTop="@+id/senderAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="4sp"
        android:textColor="@color/colorPrimary"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textViewMessage"
        android:layout_below="@+id/senderName"
        android:layout_alignStart="@+id/senderName"
        android:background="@drawable/send_message"
        android:textSize="18sp"
        android:text="@string/sentence"
        />
</RelativeLayout>